{
  "manifest_version": 3,
  "name": "Bilibili 3x Speed",
  "version": "1.1",
  "description": "一键设置B站视频为3倍速（快捷键：Ctrl+Shift+3）",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.bilibili.com/*"
  ],
  "commands": {
    "toggle_speed": {
      "suggested_key": {
        "default": "Ctrl+Shift+3"
      },
      "description": "设置视频为3倍速/原速"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}